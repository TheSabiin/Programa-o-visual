@model WebMvc.Models.PessoaViewModel

@{
    ViewData["Title"] = "Error";

}

<h2>Index</h2>

<p><a asp-action="Create">Create New</a></p>

<table class="table" border="10" style="width:600px; height:200px; border-style:ridge; border-color: rgb(224, 18, 18);" align="center">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Ações</th>
            </tr>
        </thead>
        <tbody>
    @foreach(var item in Model.Items)
        {
            <tr>
                
                <td>@item.Nome</td>
                <td>
                    <a asp-action="Edit"asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details"asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete"asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>